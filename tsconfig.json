{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "plugins": [
      { 
        "name": "typescript-plugin-css-modules",
        "options": {
          "namedExports": false
        }
      }
    ]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["node_modules", "build", "dist"]
}